<%= form_for(@listing) do |f| %>

    <div class="container">
      <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
          <h1 class="text-center login-title">Create A Gig</h1>
          <div class="account-wall">

            <form class="form-signin">
              <%= f.label :name, "Item Name:" %>
              <%= f.text_field :name, class: "form-control", placeholder:"Enter Item name" %>
              <%= f.label :description, "Item Description:" %>
              <%= f.text_area :description, class: "form-control", placeholder:"Item Description" %>

              <%= f.label :category_id %>
              <span class="form-control">
              <%= f.select :category_id, Category.all.map {|f| [f.name,f.id]},class:"form-control input-sm" %>
              </span>
              <%= f.label :subcategory_id %>
              <span class="form-control">
              <%= f.select :subcategory_id, options_for_select([]) %>
              </span>
              <%= f.label :city, "City" %>
              <%= f.text_field :city, class: "form-control", placeholder:"City" %>
              <%= f.label :state, "State" %>
              <%= f.text_field :state, class: "form-control", placeholder:"State" %><br/>

              <%= f.label :zipcode, "Zipcode",maxlength:"5" %>
              <%= f.text_field :zipcode, class: "form-control", placeholder:"zip code" %>
              <%= f.submit "Post Gig", class: "btn btn-lg btn-block btn-primary" %>




              <a href="#" class="pull-right need-help">Need help? </a><span class="clearfix"></span>
            </form>
          </div>
          <a href="#" class="text-center new-account">Create an account </a>
        </div>
      </div>
    </div>




<% end %>